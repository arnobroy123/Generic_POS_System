@*@{ 
    ViewData["Title"] = "Log In";
}*@
<div class="top"></div>
<div class="container bg-transparent py-5">
    <div class="row">
        <div class="myContainer2 col p-2 m-2 shadow bg-body rounded">
            <form class="form-group">
                <h1 class="display-2 text-left" style="font-weight: 400">Sign In</h1>
                <div class="col-md-12">
                    <label for="exampleInputEmail1" class="form-label">User Name</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputEmail1"
                           aria-describedby="emailHelp" />
                    <div id="emailHelp" class="form-text text-muted">
                        We'll never share your username with anyone else.
                    </div>
                </div>
                <div class="col-md-12">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password"
                           class="form-control"
                           id="exampleInputPassword1" />
                </div>
                <div class="mt-1 mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember Me</label>
                </div>
                <div class="d-grid d-block">
                    <button type="button"
                            class="btn btn-outline-success mb-3"
                            onclick="window.location.href='signup.html';">
                        Login
                    </button>
                </div>
            </form>
        </div>
        <div class="col myContainer p-1 m-2 shadow bg-body rounded">
            <h1 class="display-3 mt-0">Don't have an account?</h1>
            <hr class="font-size-bold">
            <div class="top2"></div>
            <div class="d-grid d-block">
                <button class="btn btn-outline-danger mt-2" onclick="window.location.href='signup.html';">Sign Up</button>
            </div>
        </div>
    </div>
</div>
    </div>
<div class="top3">
</div>

