@model IEnumerable<ProductModel>

<div class="px-3 py-5 bg-light">
    
    <div class="container-sm container-md container-lg">
        <h3 class="display-3 text-wrap fw-bold">All Products <i class="fas fa-solid fa-cart-circle-check"></i></h3>
        <div class="py-3 row g-3">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <partial name="_allProductCard" model="@product"/>
                </div>
            }
        </div>
    </div>
<div />

