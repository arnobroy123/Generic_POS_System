@model Generic_POS_System.Mdoels.EditProductModel
<div class="container py-5">
    <h3>Edit Product</h3>
    <hr />
    

    <form method="post" asp-controller="Salesman" asp-action="EditProduct">
        <div class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="productId" />
            <div class="form-group col-md-12">
                <label asp-for="productName" class="fw-bold"></label>
                <input asp-for="productName" class="form-control" />
                <span asp-validation-for="productName" class="text-danger fw-light"></span>
            </div>


            <div class="form-group col-md-12">
                <label asp-for="totalProducts" class="fw-bold"></label>
                <input asp-for="totalProducts" class="form-control" />
                <span asp-validation-for="totalProducts" class="text-danger fw-light"></span>

            </div>

            <div class="form-group col-12">
                <label asp-for="unitPrice" class="fw-bold"></label>
                <input asp-for="unitPrice" class="form-control" />
                <span asp-validation-for="unitPrice" class="text-danger fw-light"></span>
            </div>

            <div class="form-group col-12">
                <label asp-for="productDiscount" class="fw-bold"></label>
                <input asp-for="productDiscount" class="form-control fs-6" />
            </div>

            <div class="form-group col-12">
                <label asp-for="productType" class="fw-bold"></label>
                <input asp-for="productType" class="form-control" />
                <span asp-validation-for="productType" class="text-danger fw-light"></span>
            </div>
            <div class="form-group col-12">

                <input type="submit" class="btn btn-success" value="Save Changes">

            </div>
        </div>
    </form>
</div>

