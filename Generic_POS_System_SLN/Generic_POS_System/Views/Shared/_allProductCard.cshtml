@model ProductModel

<div class="container card mb-4 justify-content-center align-items-left p-2 shadow-sm" style="width: 18rem;">
    <a asp-controller="Product" asp-action="GetProductById" asp-route-id="@Model.productId" style="text-decoration:none; color:black">
        <img class="card-img-top" width="100%" height="300" src="@(String.IsNullOrEmpty(Model.coverPhotoUrl) ? "/images/dummy-image.jpg" : Model.coverPhotoUrl )" alt="Card image cap" />
    </a>
    <div class="card-body">
        <a asp-controller="Product" asp-action="GetProductById" asp-route-id="@Model.productId" style="text-decoration:none; color:black"> <h5 class="card-title">@Model.productName</h5> </a>
        <p class="card-text">Quantity: @Model.totalProducts</p>
        @if (Model.productDiscount != 0)
        {
            <div class="badge bg-danger text-wrap text-center fs-5 fw-bolder" style="width: auto; height: auto;">
                ৳ @Model.productDiscount
            </div>
            <p class="card-text text-decoration-line-through fs-6">৳@Model.unitPrice</p>
        }
        else
        {
            <p class="card-text fs-1">৳@Model.unitPrice</p>
        }

    </div>
</div>
